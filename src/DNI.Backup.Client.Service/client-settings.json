{
    "backupSettings": {
        "backupServer": {
            "ip": "192.168.2.2",
            "port": 873,
            "username": "test",
            "password": "test"
        },
        "schedulerSettings": {
            "pollingInterval": 1000
        },
        "backupSchedules": {
            "schedules": [
                {
                    "schedule": "mon-20:00",
                    "sets": [
                        "git-dirs"
                    ]
                },
                {
                    "schedule": "bi-weekly-tue-16:00",
                    "sets": [
                        "git-dirs",
                        "d-drive"
                    ]
                }
            ]
        },
        "backupSets": {
            "sets": [
                {
                    "id": "git-dirs",
                    "sourceRootDir": "D:\\Git\\Personal",
                    "includeGlob": "**/*",
                    "excludeGlobs": [
                        "**/.git/",
                        "**/obj/",
                        "**/bin/"
                    ],
                    "preserveTree": true,
                    "deleteDestinationFilesNotInSource": true,
                    "compressBeforeTransfer": true
                },
                {
                    "id": "c-drive",
                    "sourceRootDir": "C:\\",
                    "includeGlob": "**/*",
                    "excludeGlobs": [
                        "Recovery/**/*",
                        "System Volume Information/**/*",
                        "hiberfil.sys",
                        "pagefile.sys",
                        "swapfile.sys",
                        "AI_RecycleBin",
                        "$Recycle.Bin",
                        "NVIDIA Corporation"
                    ],
                    "preserveTree": true,
                    "deleteDestinationFilesNotInSource": true,
                    "compressBeforeTransfer": true
                }
            ]
        }
    }
}